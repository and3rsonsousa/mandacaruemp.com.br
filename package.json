{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s \"build:*\"",
		"build:css": "npm run generate:css -- --minify",
		"build:remix": "remix build",
		"dev": "remix build && run-p \"dev:*\"",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "cross-env NODE_ENV=development npm run wrangler",
		"dev:wrangler": "remix watch",
		"generate:css": "tailwindcss -i ./styles/tailwind.css -o app/app.css",
		"start": "cross-env NODE_ENV=production npm run wrangler",
		"wrangler": "wrangler pages dev ./public",
		"typecheck": "tsc -b"
	},
	"dependencies": {
		"@radix-ui/react-context-menu": "2.1.1",
		"@radix-ui/react-dropdown-menu": "^2.0.2",
		"@radix-ui/react-select": "1.2.0",
		"@remix-run/cloudflare": "^1.10.1",
		"@remix-run/cloudflare-pages": "^1.10.1",
		"@remix-run/react": "^1.10.1",
		"cross-env": "^7.0.3",
		"framer-motion": "8.4.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.18.0",
		"@remix-run/dev": "^1.10.1",
		"@remix-run/eslint-config": "^1.10.1",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.8",
		"eslint": "8.32.0",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.8.4",
		"wrangler": "2.8.0"
	},
	"engines": {
		"node": ">=16.13"
	}
}
